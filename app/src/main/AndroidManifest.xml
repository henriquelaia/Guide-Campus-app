<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".CampusGuideApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CampusGuide">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.LocationDetailActivity"
            android:label="Detalhes do Local"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.CampusGuide.NoActionBar"
            android:exported="false" />

        <activity
            android:name=".ui.ProfessorDetailActivity"
            android:label="Detalhes do Professor"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.CampusGuide.NoActionBar"
            android:exported="false" />

        <activity
            android:name=".ui.RoomDetailActivity"
            android:label="Detalhes da Sala"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.CampusGuide.NoActionBar"
            android:exported="false" />

    </application>

</manifest>