<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/professor_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- FOTO DO PROFESSOR -->
        <ImageView
            android:id="@+id/professor_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_professor_placeholder" />

        <!-- Os campos abaixo são exemplos comuns; mantém/ajusta aos teus IDs -->
        <TextView
            android:id="@+id/professor_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Departamento" />

        <TextView
            android:id="@+id/professor_office"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Gabinete" />

        <TextView
            android:id="@+id/professor_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Email" />

        <TextView
            android:id="@+id/professor_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Telefone/Extensão" />

        <TextView
            android:id="@+id/professor_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Cadeiras" />

        <TextView
            android:id="@+id/professor_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Notas/Atendimento" />

        <!-- Padding extra para não colidir com a bottom bar -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="72dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
