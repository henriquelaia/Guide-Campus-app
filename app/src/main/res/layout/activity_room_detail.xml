<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/room_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- FOTO DA SALA -->
        <ImageView
            android:id="@+id/room_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_room_placeholder" />

        <!-- Campos comuns; ajusta aos teus IDs se forem diferentes -->
        <TextView
            android:id="@+id/room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Nome / Código" />

        <TextView
            android:id="@+id/room_building"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Edifício" />

        <TextView
            android:id="@+id/room_campus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Polo" />

        <TextView
            android:id="@+id/room_floor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Piso" />

        <TextView
            android:id="@+id/room_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Detalhes" />

        <!-- Espaço para não colidir com a bottom bar -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="72dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
