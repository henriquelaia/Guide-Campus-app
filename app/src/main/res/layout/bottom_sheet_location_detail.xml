<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surfaceColor"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/onSurfaceColor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/location_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@color/primaryColor" />

    <TextView
        android:id="@+id/location_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@color/onSurfaceColor" />

    <TextView
        android:id="@+id/location_short_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/onSurfaceColor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_details_button"
        style="@style/Widget.MaterialComponents.Button.FilledButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"
        android:text="@string/action_view_details"
        app:icon="@drawable/ic_map"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@color/primaryTextColor" />

</LinearLayout>