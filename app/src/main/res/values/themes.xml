<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CampusGuide" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cg_primary</item>
        <item name="colorPrimaryVariant">@color/cg_primary_dark</item>
        <item name="colorOnPrimary">@color/cg_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cg_secondary</item>
        <item name="colorSecondaryVariant">@color/cg_secondary_dark</item>
        <item name="colorOnSecondary">@color/cg_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/cg_background</item>
        <item name="colorSurface">@color/cg_surface</item>
        <item name="colorOnBackground">@color/cg_on_background</item>
        <item name="colorOnSurface">@color/cg_on_surface</item>
    </style>

    <style name="Theme.CampusGuide.NoActionBar" parent="Theme.CampusGuide">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CampusGuide.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CampusGuide.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>