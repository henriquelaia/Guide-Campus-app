<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema Base da Aplicação -->
    <style name="Theme.CampusGuide" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cores Primárias -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Cores Secundárias -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Cor da Status Bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Estilo para Activities sem ActionBar -->
    <style name="Theme.CampusGuide.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Overlays para a Toolbar -->
    <style name="Theme.CampusGuide.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CampusGuide.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>